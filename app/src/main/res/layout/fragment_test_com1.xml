<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TestCom1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/shop">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shop"
            style="@style/MyTextCss"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpagerF1Test1"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTest1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpagerF1Test2"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTest2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpagerF1Test3"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"/>

    </LinearLayout>

</FrameLayout>